<section>
    <div class="container mt-3 p-3">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 m-3">
                <div class="card" style="width: 18rem;height: 28rem;">
                    <img src="/product_images/{{this._id}}.png" class="card-img-top" alt="..." style="width:13rem;height:16rem;p-3;max-width: 100%;
  height: 100%;display: block;
  margin-left: auto;
  margin-right: auto;margin-top: auto;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <h7 class="card-title">Price:Rs {{this.Price}}</h7>
                        <p class="card-text">{{this.Description}}</p>
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button> {{!-- {{this._id should be in '',pass as string }} --}}

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>